#### Master script for pairwise Fst calculations among all populations
#### Output file includes a 5th column with population comparisons
import tskit
import numpy as np
import pandas as pd
import itertools

# Read chromosome names from file
with open("mydata/chr_list.txt") as chrom:
    chromlist = [line.strip() for line in chrom]

# Generate list of chromosome file paths
chromosome_files = [f"mydata/camarhynchus_treeSequences/camarhynchus_{i}_LoxiAA.trees" for i in chromlist]

# Define all populations
all_populations = [
    'pallidus_W', 'pallidusSanCristobal', 'psittacula_affinis', 'psittacula_habeli',
    'psittacula_psittacula', 'heliobatesIsabela', 'pallidusSanta_Cruz', 'parvulus', 'pauper'
]

# Define empty list to store results
all_fst_data = []

# Iterate through each chromosome file
for chrom, file in zip(chromlist, chromosome_files):
    print(f"Processing {chrom}...")

    # Load the tree sequence
    ts = tskit.load(file)

    # Collect population metadata
    popmd_ts = {}
    for i in set(ts.individual_populations):
        pop = ts.population(i)
        popmd_ts[pop.metadata['population']] = i

    # Define 10 Kb windows
    chrom_length = ts.sequence_length
    windows = np.arange(0, chrom_length, 10000)
    if windows[-1] < chrom_length:
        windows = np.append(windows, chrom_length)

    # Generate all pairwise combinations
    pop_pairs = list(itertools.combinations(all_populations, 2))

    # Compute Fst for all population pairs
    for pop1, pop2 in pop_pairs:
        if pop1 in popmd_ts and pop2 in popmd_ts:
            # Get Fst values for each window
            fst_matrix = ts.Fst(
                sample_sets=[
                    ts.samples(population=popmd_ts[pop1]),
                    ts.samples(population=popmd_ts[pop2])
                ],
                windows=windows,
                mode='site'  # 'branch' for branch-length based Fst
            )
            
            # Fst returns 1D array directly for pairwise comparisons
            fst_win = fst_matrix  # No need for matrix indexing

            # Optional: Handle NaN values (uncomment if needed)
            # fst_win = np.nan_to_num(fst_win, nan=0.0)

            # Create contrast name
            contrast = f"{pop1}_{pop2}"

            # Store results in DataFrame
            fst_df = pd.DataFrame({
                "chr": chrom,
                "window_start": windows[:-1],
                "window_end": windows[1:],
                "fst": fst_win,
                "contrast": contrast,
                "pop1": pop1,
                "pop2": pop2
            })

            all_fst_data.append(fst_df)
        else:
            print(f"Skipping {pop1} vs {pop2} for {chrom} - population(s) not found")

# Combine all results
final_fst_df = pd.concat(all_fst_data, ignore_index=True)

# Save output
final_fst_df.to_csv(
    "mydata/camarhynchus_results/pairwise_fst_all_camarhynchus_populations_all_chromosomes_10kb.txt",
    sep='\t',
    index=False
)

print("Calculation complete! First 5 rows:")
print(final_fst_df.head())
